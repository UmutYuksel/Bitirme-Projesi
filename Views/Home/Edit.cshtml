@model BitirmeProjesi.Models.CarCreate

@{
    ViewBag.Title = "İlan Düzenleme";
}
<style>
    textarea {
    resize: none; /* Genişletme ve daraltma işlemlerini devre dışı bırakır */
    overflow: auto; /* Taşan içerik için kaydırma çubuğu ekler */
}

</style>
<h2>İlan Düzenle</h2>

<form asp-controller="Home" asp-action="Edit" method="post" enctype="multipart/form-data" class="my-4">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All"></div>

    <div class="form-group mb-1">
        <label>Araç Kategorisi</label>
        <input type="text" class="form-control" value="@ViewBag.CategoryName" readonly />
    </div>

    <div class="form-group mb-1">
        <label>Araç Markası</label>
        <input type="text" class="form-control" value="@ViewBag.BrandName" readonly />
    </div>

    <div class="form-group mb-1">
        <label asp-for="ModelName"></label>
        <input asp-for="ModelName" class="form-control" readonly />
        <span asp-validation-for="ModelName" class="text-danger"></span>
    </div>

    <div class="form-group mb-1">
        <label asp-for="HorsePower"></label>
        <input asp-for="HorsePower" class="form-control" readonly />
        <span asp-validation-for="HorsePower" class="text-danger"></span>
    </div>

    <div class="form-group mb-1">
        <label asp-for="MaxTorque"></label>
        <input asp-for="MaxTorque" class="form-control" readonly />
        <span asp-validation-for="MaxTorque" class="text-danger"></span>
    </div>

    <div class="form-group mb-1">
        <label>Şanzıman Tipi</label>
        <input type="text" class="form-control" value="@ViewBag.TransmissionType" readonly />
    </div>

    <div class="form-group mb-1">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-1">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-1">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group mb-1">
        <label asp-for="Millage"></label>
        <input asp-for="Millage" class="form-control" />
        <span asp-validation-for="Millage" class="text-danger"></span>
    </div>

    <div class="form-group mb-1">
        <label asp-for="Color"></label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

    <div class="input-group mb-2 mt-3">
        <input type="file" name="imageFile" id="imageFile" class="form-control">
    </div>

    <div class="form-group mb-1">
    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control" rows="4" style="resize: none;" oninput="autoResize(this)"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>


    <div class="mt-3">
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-action="Details" asp-controller="Home" asp-route-id="@ViewBag.ModelId"
            class="btn btn-secondary">İptal</a>
    </div>
</form>